{
  "types": [
    "node"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
  "compilerOptions": {
    "target": "es5",
    "rootDir": "src",
    "outDir": "dist",
    "downlevelIteration": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": [
      "es2019"
    ]
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./tests/**/*.spec.ts"
  ]
}